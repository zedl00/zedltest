<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/votantes/edit/{{ votante.id }}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{ votante.nombre }}" class="form-control" name="nombre" placeholder="Nombre(s)" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{ votante.apellido }}"  name="apellido" class="form-control" placeholder="Apellido(s)">
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{ votante.cedula }}" name="cedula" class="form-control" placeholder="Cedula">
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{ votante.celular }}" name="celular" class="form-control" placeholder="Celular">
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{ votante.telefono }}" name="telefono" class="form-control" placeholder="Telefono">
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{ votante.direccion }}" name="direccion"  class="form-control" placeholder="Direccion">
                        </div>

                        <div class="form-group">
                            <textarea name="comentario" id="" rows="10" class="form-control"  placeholder="Comentario">{{ votante.comentario }}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save       
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>